<br>
<div class = 'container-fluid'>
  <%= form_for(@user) do |f| %>
    <div class =  'row'>
      <div class = 'col-xs-10 col-xs-offset-1'>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前" %>
      </div>
      <br>
      <div class = 'col-xs-10 col-xs-offset-1'>
        <%= f.text_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス" %>
      </div>
      <div class = 'row'>
        <div class = 'col-xs-2'>
        </div>
        <div class = 'col-xs-2'>
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle img-responsive", fallback: "no_image.jpg"%>
        </div>
        <div class = 'col-xs-8'>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "" %>
        </div>
        <div class = 'col-xs-1'>
        </div>
        <div class = 'col-xs-10 col-xs-offset-1'>
          <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
